<div class="mt-3 mb-4">
    <h2>Edit my Course</h2>

    <form action="/course/{{course._id}}?_method=PUT" class="" method="POST">

        <div class="form-group">
            <label for="">Name</label>
            <input type="text" name="name" value="{{course.name}}" class="form-control">
        </div>

         <div class="form-group">
            <label for="">Descritpion</label>
           <textarea name="description" class="form-control" id="" cols="30" rows="5">{{course.description}}</textarea>
        </div>
         <div class="form-group">
            <label for="">Video</label>
            <div class="display-video mb-3">
                 <img src="{{course.image}}" alt="" width="200px"></a>
            </div>
            <input type="text" name="videoId" value="{{course.videoId}}" class="form-control">
        </div>
         <div class="form-group">
            <label for="">Level</label>
            {{!-- <input type="text" name="level" value="{{course.level}}" class="form-control"> --}}
            <select name="level" class="form-control" id="">
                {{#checkSelectedEditLevelCourse courses.level == 1}}
                    <option selected value="1">Normal</option>
                {{/if}}
                <option value="2">Easy</option>
                <option value="3">Medium</option>
                <option value="4">Difficult</option>
            </select>
        </div>
        

        <button type="submit" class="btn btn-primary">PUT</button>
    </form>
</div>