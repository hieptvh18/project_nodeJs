<div class="mt-3 mb-4">
    <h2>Create new Course</h2>

    <form action="/course/store" class="" method="POST">

        <div class="form-group">
            <label for="">Name</label>
            <input type="text" name="name" placeholder="enter name" class="form-control">
        </div>

         <div class="form-group">
            <label for="">Descritpion</label>
            <input type="text" name="description" placeholder="enter desc" class="form-control">
        </div>
         <div class="form-group">
            <label for="">Video</label>
            <input type="text" name="videoId" placeholder="enter video ID" class="form-control">
        </div>
         <div class="form-group">
            <label for="">Level</label>
            <input type="text" name="level" placeholder="enter name" class="form-control">
        </div>
        

        <button type="submit" class="btn btn-primary">POST</button>
    </form>
</div>